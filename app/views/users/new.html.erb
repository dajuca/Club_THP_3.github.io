<h1>S'inscrire</h1>
<br>
<%= form_for(@user) do |f| %>
  <%= render "shared/error" %>
  <%= f.label :prénom %>
  <br>
  <%= f.text_field :first_name, placeholder: "Prenom" , class: 'form-control'%>
  <br>
  <%= f.label :nom %>
  <br>
  <%= f.text_field :last_name, placeholder: "Nom" , class: 'form-control'%>
  <br>
  <%= f.label :email %>
  <br>
  <%= f.email_field :email, placeholder: "Mail" , class: 'form-control'%>
  <small>Max 255 caractères</small>
  <br>
  <%= f.label :password %>
  <br>
  <%= f.password_field :password, placeholder: "Mot de passe" , class: 'form-control'%>
  <small>Entre 6 et 40 caractères</small>
  <br>
  <%= f.label :password_confirmation, "Confirmez" %>
  <br>
  <%= f.password_field :password_confirmation, placeholder: "Confirmer mot de passe" , class: 'form-control'%>
  <small>Les mots de passe doivent correspondre</small>
  <br>
  <br>
  <%= f.submit "Créer son compte", class: "btn btn-primary" %>
<% end %>
